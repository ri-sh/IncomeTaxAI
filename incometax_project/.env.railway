# Railway Environment Variables Template
# Copy these to your Railway project environment variables

# Django Configuration
DEBUG=False
SECRET_KEY=your-production-secret-key-change-this
ALLOWED_HOSTS=*.railway.app,*.up.railway.app
CSRF_TRUSTED_ORIGINS=https://*.railway.app,https://*.up.railway.app

# Database (will be auto-provided by Railway PostgreSQL service)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis (will be auto-provided by Railway Redis service)  
# REDIS_URL=redis://host:port

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Ollama Configuration (if using external Ollama service)
OLLAMA_BASE_URL=https://your-ollama-service.railway.app
OLLAMA_MODEL=qwen2.5:3b

# Privacy Engine Configuration
PRIVACY_ENGINE_ENABLED=true
ENCRYPTION_SALT=your-secure-encryption-salt-32-chars

# Security Settings (Railway handles HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Static Files (Railway handles static file serving)
STATIC_URL=/static/
MEDIA_URL=/media/